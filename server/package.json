{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.41",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "start": "yarn run build && node build/index.js",
    "start:dev": "nodemon",
    "test": "env mocha -r ts-node/register 'tests/**/*.ts'",
    "client": "cd ../client && yarn start",
    "client:install": "cd ../client && yarn",
    "setup": "concurrently \"yarn\" \"yarn client:install\"",
    "dev": "concurrently \"yarn run start:dev\" \"yarn run client\""
  },
  "dependencies": {
    "concurrently": "^6.0.2",
    "mongodb": "^3.6.6"
  }
}
